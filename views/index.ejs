<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head')%>
  <body>
    <div class="container">
      <div class="wrapper">
        <form method="post" action="/city" class="wrapper__search" id="form">
          <input
            class="wrapper__search--input"
            type="text"
            name="city"
            placeholder="Search your city..."
          />
          <button class="wrapper__search--btn">
            <i class="fas fa-search"></i>
          </button>
        </form>

        <div class="wrapper__content">
          <div class="wrapper__content--header">
            <div class="location"><%= data.name %>, <%= data.country %></div>
            <div id="date" class="date">Thursday, December 16</div>
          </div>
          <div class="wrapper__content--temp">
            <div class="temperature"><%= data.temp %>°C</div>
            <div class="icon">
              <img class="icon__img" src="<%= data.icon %>" alt="" />
            </div>
            <div class="description"><%= data.description %></div>
          </div>
          <div class="wrapper__content--fall">
            <div class="wrapper__content--fall--item">
              <div class="item__title">wind</div>
              <div class="item__icon">
                <img
                  class="item__icon--img"
                  src="https://github.com/AsiaKo/WeatherApp/blob/master/img/conditions/wind.png?raw=true"
                  alt=""
                />
              </div>
              <div class="item__result"><%= data.wind %>km/h</div>
            </div>
            <div class="wrapper__content--fall--item">
              <div class="item__title">humidity</div>
              <div class="item__icon">
                <img
                  class="item__icon--img"
                  src="https://github.com/AsiaKo/WeatherApp/blob/master/img/conditions/humidity.png?raw=true"
                  alt=""
                />
              </div>
              <div class="item__result"><%= data.humidity %>%</div>
            </div>
            <div class="wrapper__content--fall--item">
              <div class="item__title item__title--lohi">
                <span class="item__title--lo">lo</span>
                <span class="item__title--hi">hi</span>
              </div>
              <div class="item__icon">
                <img
                  class="item__icon--img"
                  src="https://github.com/AsiaKo/WeatherApp/blob/master/img/conditions/hi-lo.png?raw=true"
                  alt=""
                />
              </div>
              <div class="item__result item__result--lohi">
                <span class="item__result--lo"><%= data.min %>°</span>
                <span class="item__result--hi"><%= data.max %>°</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScript -->
    <script src="../public/js/app.js"></script>
  </body>
</html>
